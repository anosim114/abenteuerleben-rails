{
  "name": "app",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.2",
    "esbuild": "^0.20.0",
    "sass": "^1.70.0",
    "sweetalert2": "^11.10.5",
    "bootstrap": "^5.3.2",
    "@popperjs/core": "^2.11.8"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css ./app/assets/stylesheets/application-old.scss:./app/assets/builds/application-old.css --no-source-map --load-path=node_modules"
  }
}
