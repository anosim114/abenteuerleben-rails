<hgroup>
<h1>Developer space</h1>
<p>Showcase of various design elements</p>
</hgroup>

<br>

<h2>Typography</h2>

<div>
  <% 1.upto(6).each do |i| %>
  <h<%= i %>>h<%= i %> - Text</h<%= i %>>
  <% end %>
</div>

<h2>Colors</h2>
<div style="display: flex; gap: 1rem; flex-direction: column;">
  <% ["gray", "blue", "red"].each do |color| %>
  <div>
    <h3><%= color %></h3>
    <div style="display:flex;">
      <div style="display: inline-block; height: 2rem; width: 1.5rem; background-color: var(<%= '--' + color %>-100);"></div>
      <div style="display: inline-block; height: 2rem; width: 1.5rem; background-color: var(<%= '--' + color %>-200);"></div>
      <div style="display: inline-block; height: 2rem; width: 1.5rem; background-color: var(<%= '--' + color %>-300);"></div>
      <div style="display: inline-block; height: 2rem; width: 1.5rem; background-color: var(<%= '--' + color %>-400);"></div>
      <div style="display: inline-block; height: 2rem; width: 1.5rem; background-color: var(<%= '--' + color %>-500);"></div>
      <div style="display: inline-block; height: 2rem; width: 1.5rem; background-color: var(<%= '--' + color %>-600);"></div>
    </div>
  </div>
  <% end %>
</div>

<br>
<br>
